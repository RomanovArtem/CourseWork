<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent" android:layout_width="match_parent">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@drawable/background_fon"
        android:scaleType="fitXY"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:gravity="bottom">
    <ToggleButton
        android:id="@+id/fruit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/fruit_on_off"
        android:gravity="center_vertical"
        android:textOn="Фрукты"
        android:textOff="Фрукты"
        android:textSize="16dp"
        android:textAlignment="center"
        android:textColor="@color/color_main"
        android:onClick="onToggleButtonClick"
        android:checked="false"
        android:layout_marginLeft="3dp"
        android:textStyle="normal"
        android:layout_marginTop="20dp" />
        <!-- android:drawableLeft="@drawable/icon_phone"
        android:textStyle="bold|italic"-->

    <ToggleButton
        android:id="@+id/vegetables"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/vegetables_on_off"
        android:gravity="center_vertical"
        android:textOn="Овощи"
        android:textOff="Овощи"
        android:textSize="16dp"
        android:textAlignment="center"
        android:textColor="@color/color_main"
        android:onClick="onToggleButtonClick"
        android:checked="false"
        android:layout_alignBottom="@+id/fruit"
        android:layout_centerHorizontal="true" />

    <ToggleButton android:id="@+id/seasoning"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/seas_on_off"
        android:gravity="center_vertical"
        android:textOn="Приправы"
        android:textOff="Приправы"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@color/color_main"
        android:onClick="onToggleButtonClick"
        android:checked="false"
        android:layout_alignBottom="@+id/vegetables"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="3dp" />

    <ToggleButton android:id="@+id/dairy"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/dai_on_off"
        android:gravity="center_vertical"
        android:textOn="Молочные продукты"
        android:textOff="Молочные продукты"
        android:textSize="13dp"
        android:textColor="@color/color_main"
        android:onClick="onToggleButtonClick"
        android:checked="false"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/fruit"
        android:textAlignment="center"
        android:layout_marginLeft="3dp" />

    <ToggleButton
        android:id="@+id/supplements"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/supp_on_off"
        android:gravity="center_vertical"
        android:textOn="Пищевые добавки"
        android:textOff="Пищевые добавки"
        android:textSize="13dp"
        android:textColor="@color/color_main"
        android:onClick="onToggleButtonClick"
        android:checked="false"
        android:textAlignment="center"
        android:layout_alignTop="@+id/dairy"
        android:layout_alignLeft="@+id/vegetables"
        android:layout_alignStart="@+id/vegetables" />

    <ToggleButton
        android:id="@+id/nuts"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/button_background"
        android:gravity="center_vertical"
        android:textOn="Орехи"
        android:textOff="Орехи"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@color/color_main"
        android:onClick="onToggleButtonClick"
        android:checked="false"
        android:layout_alignTop="@+id/supplements"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="3dp" />

    <ToggleButton
        android:id="@+id/meat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/meat_on_off"
        android:gravity="center_vertical"
        android:textOn="Мясо"
        android:textOff="Мясо"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@color/color_main"
        android:onClick="onToggleButtonClick"
        android:checked="false"
        android:layout_below="@+id/dairy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="3dp" />

    <ToggleButton
        android:id="@+id/refill"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/button_background"
        android:gravity="center_vertical"
        android:textOn="Заправка"
        android:textOff="Заправка"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@color/color_main"
        android:onClick="onToggleButtonClick"
        android:checked="false"
        android:layout_alignBottom="@+id/meat"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:id="@+id/seafood"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/sea_on_off"
        android:gravity="center_vertical"
        android:textOn="Морепродукты"
        android:textOff="Морепродукты"
        android:textSize="12dp"
        android:textAlignment="center"
        android:textColor="@color/color_main"
        android:onClick="onToggleButtonClick"
        android:checked="false"
        android:layout_alignBottom="@+id/refill"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="3dp" />

    <ToggleButton
        android:id="@+id/cereals"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/cer_on_off"
        android:gravity="center_vertical"
        android:textOn="Крупы"
        android:textOff="Крупы"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@color/color_main"
        android:onClick="onToggleButtonClick"
        android:checked="false"
        android:layout_below="@+id/meat"
        android:layout_alignLeft="@+id/meat"
        android:layout_alignStart="@+id/meat"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="10dp" />

    <ToggleButton
        android:id="@+id/greenery"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/gree_on_off"
        android:gravity="center_vertical"
        android:textOn="Зелень"
        android:textOff="Зелень"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@color/color_main"
        android:onClick="onToggleButtonClick"
        android:checked="false"
        android:layout_below="@+id/refill"
        android:layout_alignLeft="@+id/refill"
        android:layout_alignStart="@+id/refill"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="10dp" />

            <ToggleButton
                android:id="@+id/berries"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ber_on_off"
                android:gravity="center_vertical"
                android:textOn="Ягоды"
                android:textOff="Ягоды"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColor="@color/color_main"
                android:onClick="onToggleButtonClick"
                android:checked="false"
                android:layout_below="@+id/seafood"
                android:layout_alignLeft="@+id/seafood"
                android:layout_alignStart="@+id/seafood"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="10dp" />

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:translationZ="2dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/radius"
            android:text="ПРОСТО - ВКУСНО"
            android:textColor="#FEFEFE"
            android:gravity="center"
            android:textSize="25dp"/>

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imageButton2"
            android:background="@android:color/transparent"
            android:src="@drawable/mainstar"
            android:clickable="true"
            android:onClick="ClickImageButton"
            android:translationZ="2dp"
            android:visibility="visible"
            android:focusable="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp" />


    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:translationZ="2dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/footer_gradient"
            android:textColor="#FEFEFE"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_alignParentBottom="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="@drawable/next"
            android:id="@+id/next"
            android:onClick="onClick"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="36dp"
            android:layout_marginEnd="36dp" />

    </RelativeLayout>

</FrameLayout>