<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent" android:layout_width="match_parent">
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:background="@drawable/background_fon"
        android:scaleType="fitXY"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >
        <ToggleButton
            android:id="@+id/fr_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/fru1"
            android:gravity="center_vertical"
            android:textOn="Ананас"
            android:textOff="Ананас"
            android:textSize="14dp"
            android:textAlignment="center"
            android:textColor="@color/color"
            android:onClick="onToggleButtonClick"
            android:checked="false"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp" />

        <ToggleButton
            android:id="@+id/fr_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/fru2"
            android:gravity="center_vertical"
            android:textOn="Апельсин"
            android:textOff="Апельсин"
            android:textSize="14dp"
            android:textAlignment="center"
            android:textColor="@color/color"
            android:onClick="onToggleButtonClick"
            android:checked="false"
            android:layout_alignTop="@+id/fr_1"
            android:layout_alignLeft="@+id/fr_5"
            android:layout_alignStart="@+id/fr_5" />

        <ToggleButton
            android:id="@+id/fr_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/fru3"
            android:gravity="center_vertical"
            android:textOn="Банан"
            android:textOff="Банан"
            android:textSize="14dp"
            android:textAlignment="center"
            android:textColor="@color/color"
            android:onClick="onToggleButtonClick"
            android:checked="false"
            android:layout_alignTop="@+id/fr_2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp" />

        <ToggleButton
            android:id="@+id/fr_4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/fru4"
            android:gravity="center_vertical"
            android:textOn="Виноград"
            android:textOff="Виноград"
            android:textSize="14dp"
            android:textAlignment="center"
            android:textColor="@color/color"
            android:onClick="onToggleButtonClick"
            android:checked="false"
            android:layout_below="@+id/fr_1"
            android:layout_alignLeft="@+id/fr_1"
            android:layout_alignStart="@+id/fr_1"
            android:layout_marginTop="30dp" />

        <ToggleButton
            android:id="@+id/fr_5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/fru5"
            android:gravity="center_vertical"
            android:textOn="Курага"
            android:textOff="Курага"
            android:textSize="14dp"
            android:textAlignment="center"
            android:textColor="@color/color"
            android:onClick="onToggleButtonClick"
            android:checked="false"
            android:layout_alignTop="@+id/fr_4"
            android:layout_alignLeft="@+id/fr_8"
            android:layout_alignStart="@+id/fr_8" />

        <ToggleButton
            android:id="@+id/fr_6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/fru6"
            android:gravity="center_vertical"
            android:textOn="Лимон"
            android:textOff="Лимон"
            android:textSize="14dp"
            android:textAlignment="center"
            android:textColor="@color/color"
            android:onClick="onToggleButtonClick"
            android:checked="false"
            android:layout_alignTop="@+id/fr_5"
            android:layout_alignLeft="@+id/fr_3"
            android:layout_alignStart="@+id/fr_3" />

        <ToggleButton
            android:id="@+id/fr_7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/fru7"
            android:gravity="center_vertical"
            android:textOn="Мандарин"
            android:textOff="Мандарин"
            android:textSize="14dp"
            android:textAlignment="center"
            android:textColor="@color/color"
            android:onClick="onToggleButtonClick"
            android:checked="false"
            android:layout_below="@+id/fr_4"
            android:layout_alignLeft="@+id/fr_4"
            android:layout_alignStart="@+id/fr_4"
            android:layout_marginTop="30dp" />

        <ToggleButton
            android:id="@+id/fr_8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/fru8"
            android:gravity="center_vertical"
            android:textOn="Персик"
            android:textOff="Персик"
            android:textSize="14dp"
            android:textAlignment="center"
            android:textColor="@color/color"
            android:onClick="onToggleButtonClick"
            android:checked="false"
            android:layout_alignTop="@+id/fr_7"
            android:layout_centerHorizontal="true" />

        <ToggleButton
            android:id="@+id/fr_9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/fru9"
            android:gravity="center_vertical"
            android:textOn="Слива"
            android:textOff="Слива"
            android:textSize="14dp"
            android:textAlignment="center"
            android:textColor="@color/color"
            android:onClick="onToggleButtonClick"
            android:checked="false"
            android:layout_alignTop="@+id/fr_8"
            android:layout_alignLeft="@+id/fr_6"
            android:layout_alignStart="@+id/fr_6" />



        <ToggleButton
            android:id="@+id/fr_10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/fru10"
            android:gravity="center_vertical"
            android:textOn="Чернослив"
            android:textOff="Чернослив"
            android:textSize="13dp"
            android:textAlignment="center"
            android:textColor="@color/color"
            android:onClick="onToggleButtonClick"
            android:checked="false"
            android:layout_below="@+id/fr_7"
            android:layout_alignLeft="@+id/fr_7"
            android:layout_alignStart="@+id/fr_7"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp" />

        <ToggleButton
            android:id="@+id/fr_11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/fru11"
            android:gravity="center_vertical"
            android:textOn="Яблоко"
            android:textOff="Яблоко"
            android:textSize="14dp"
            android:textAlignment="center"
            android:textColor="@color/color"
            android:onClick="onToggleButtonClick"
            android:checked="false"
            android:layout_alignLeft="@+id/fr_9"
            android:layout_alignStart="@+id/fr_9"
            android:layout_alignTop="@+id/fr_10" />


        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/radius"
            android:text="ФРУКТЫ"
            android:textColor="#FEFEFE"
            android:gravity="center"
            android:textSize="25dp"/>


        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/button3"
            android:onClick="onClick"
            android:background="@drawable/radius_button"
            android:drawableStart="@drawable/back"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:translationZ="3dp"
            android:layout_marginTop="5dp" />

    </RelativeLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/footer_gradient"
            android:textColor="#FEFEFE"
            android:gravity="center"
            android:textSize="25dp" />
    </RelativeLayout>

</FrameLayout>